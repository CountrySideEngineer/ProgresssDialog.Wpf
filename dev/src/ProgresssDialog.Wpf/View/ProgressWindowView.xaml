<Window x:Class="ProgresssDialog.Wpf.View.ProgressWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgresssDialog.Wpf.View"
        xmlns:vm="clr-namespace:ProgresssDialog.Wpf.ViewModel"
        mc:Ignorable="d"
        ResizeMode="CanResize"
        Title="ProgressDialogView" 
        DataContextChanged="Window_DataContextChanged" 
        ContentRendered="Window_ContentRendered"
        WindowStartupLocation="CenterScreen"
        MaxHeight="600"
        MinHeight="144"
        Height="144"
        Width="600"
        >
    <Window.DataContext>
        <vm:ProgressWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <local:ProgressItemView DataContext="{Binding ItemContext, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</Window>
